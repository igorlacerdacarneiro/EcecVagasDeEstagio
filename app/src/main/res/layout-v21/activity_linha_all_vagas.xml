<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentTop="true"
            android:id="@+id/imagemViewDivulgacaoAllVaga"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:id="@+id/textViewTituloAllVaga"
            android:layout_below="@+id/imagemViewDivulgacaoAllVaga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/textViewLocalAllVaga"
            android:layout_below="@+id/textViewTituloAllVaga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textViewEmpresaAllVaga"
            android:layout_below="@id/textViewLocalAllVaga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewHorarioAllVaga"
            android:layout_below="@id/textViewEmpresaAllVaga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingBottom="24dp"
            android:textSize="16sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>